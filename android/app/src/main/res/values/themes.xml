<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Современная тема при запуске -->
    <style name="LaunchTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>

        <!-- Приоритетнее: background для старых Android -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Тема после запуска Flutter -->
    <style name="NormalTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>
